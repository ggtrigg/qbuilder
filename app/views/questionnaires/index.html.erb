<div class="row">
  <div class="col">
    <h1>Questionnaires</h1>
    <ul class="list-group">
      <% @questionnaires.each do |questionnaire| %>
        <% ctx = questionnaire.responses.present? ? 'info' : 'success' %>
        <li class="list-group-item list-group-item-action list-group-item-<%= ctx %> d-flex justify-content-between align-items-center">
          <%= link_to questionnaire.title, questionnaire, class: 'text-reset stretched-link' %>
          <span class="badge badge-<%= ctx %>"><%= questionnaire.responses.count %></span>
        </li>
      <% end %>
    </ul>
    
    <%= link_to 'New Questionnaire', new_questionnaire_path, class: 'btn btn-primary mt-2' %>
  </div>
</div>
