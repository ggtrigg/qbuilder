<div class="row">
  <div class="col-9">
    <h1 class="mt-3">
      <%= @questionnaire.title %>
    </h1>
  </div>
  <% if @questionnaire.responses.none? %>
    <div class="col-3">
      <%= link_to 'Edit', edit_questionnaire_path(@questionnaire), class: 'btn btn-primary btn-sm', role: 'button' %>
    </div>
  <% end %>
  <div class="col-12">
    <%= link_to nil, new_questionnaire_response_url(@questionnaire) %>
    <% if @questionnaire.description.present? %>
      <div class="border rounded p-3 my-2">
        <%= @questionnaire.description %>
      </div>
    <% end %>
    
    <div class="row p-5 my-2">
      <div class="col-12 mb-2 pb-2 border-bottom">
        <!-- Button trigger modal -->
        <% if @questionnaire.responses.none? %>
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter">
          Add Question
        </button>
        <% end %>
      </div>
      <% @questionnaire.questions.each_with_index do |questn, i| %>
        <div class="col-9">
          <h4>Question <%= i + 1 %>.</h4>
          <p><%= questn.blurb %></p>
          <p class="small">
            <%= link_to('Delete', questionnaire_question_path(@questionnaire, questn), method: :delete, data: {confirm: 'Really delete this question?'}) unless @questionnaire.responses.count > 0 %>
          </p>
        </div>
        <div class="col-3">
          <p><strong>Type:</strong> <%= questn.answer_type.humanize %></p>
        </div>
      <% end %>
    </div>
  
    
    <%= link_to 'Back', questionnaires_path, class: 'btn btn-secondary', role: 'button' %>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_for(@questionnaire.questions.new, url: questionnaire_questions_path(@questionnaire)) do |form| %>
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Add Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'questions/fields', form: form %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit 'Save Question', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>