<div class="row">
  <div class="col-9">
    <h1 class="mt-3">
      <%= @questionnaire.title %>
    </h1>
  </div>
  <% if @questionnaire.responses.none? %>
    <div class="col-3">
      <%= link_to 'Edit', edit_questionnaire_path(@questionnaire), class: 'btn btn-primary btn-sm', role: 'button' %>
    </div>
  <% end %>
  <div class="col-12">
    <p class="text-muted">Send this link to the people you wish to complete this questionnaire: 
    <%= link_to nil, new_questionnaire_response_url(@questionnaire) %></p>
    <% unless @questionnaire.responses.none? %>
      <p>Once someone has completed a response you can no longer edit this questionnaire.</p>
    <% end %>
    <% if @questionnaire.description.present? %>
      <div class="border rounded p-3 my-2">
        <%= @questionnaire.description %>
      </div>
    <% end %>
    
    <div class="row my-2">
      <div class="col-12">
        <!-- Button trigger modal -->
        <% if @questionnaire.responses.none? %>
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter">
          Add Question
        </button>
        <% end %>
      </div>
    </div>
    <div <%= 'id=questions' if @questionnaire.responses.none? %> data-url="<%= sort_questionnaire_questions_path @questionnaire %>" class="border rounded mb-3 p-3 border-<%= @questionnaire.responses.none? ? 'success' : 'danger' %>">
      <% @questionnaire.questions.each_with_index do |questn, i| %>
        <div class="row" id="<%= dom_id(questn) %>">
          <div class="col-9">
            <h5>Question <span class="q-index"><%= i %></span>.</h5>
            <p><%= questn.blurb %></p>
            <% if questn.answer_type.downcase.start_with? 'multiple_choice' %>
            <p><strong>Choices: </strong><%= questn.choices.join(' &bull; ').html_safe %></p>
            <% end %>
            <p class="small">
              <%= link_to('Delete', questionnaire_question_path(@questionnaire, questn), method: :delete, data: {confirm: 'Really delete this question?'}) unless @questionnaire.responses.count > 0 %>
            </p>
          </div>
          <div class="col-3">
            <p><strong>Type:</strong> <%= questn.answer_type.humanize %>
            <%= score_range_s(questn) if questn.answer_type == 'score' %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  
    
    <%= link_to 'Back', questionnaires_path, class: 'btn btn-secondary', role: 'button' %>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_for(@questionnaire.questions.new, url: questionnaire_questions_path(@questionnaire)) do |form| %>
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Add Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'questions/fields', form: form %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit 'Save Question', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>