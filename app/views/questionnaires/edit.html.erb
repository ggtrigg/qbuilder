<turbo-frame id="main-content" refresh="morph">
  <div class="row">
    <div class="col offset-sm-1 mr-auto">
      <h1 class="mt-3">
        Edit Questionnaire
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1">
      <%= link_to 'Back', questionnaire_path(@questionnaire), class: 'btn btn-secondary', role: 'button' %>
    </div>
    <div class="col">
      <%= render 'form', questionnaire: @questionnaire %>
    </div>
  </div>
</turbo-frame>
