<% if notice.present? %>
  <div class="col-sm-10 offset-sm-1 alert alert-info alert-dismissible" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if alert.present? %>
  <div class="col-sm-10 offset-sm-1 alert alert-danger alert-dismissible" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>