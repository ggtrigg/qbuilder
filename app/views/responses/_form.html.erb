<%= form_with(model: @response, url: questionnaire_responses_path(@questionnaire), local: true) do |form| %>
  <% if @response.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <strong><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</strong>

      <ul>
        <% @response.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-light p-2">
    <h4>Your details</h4>
  
    <div class="form-group row">
      <%= form.label :name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control', required: true %>
      </div>
    </div>
  </div>

  <hr>

  <%= form.fields_for :answers, @answer do |f| %>
    <%= render 'answers/fields', form: f %>
  <% end %>

  <div class="actions mt-5">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
