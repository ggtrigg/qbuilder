<div class="row">
  <div class="col offset-sm-1">
    <h1>Questionnaire responses</h1>
  </div>
  <div class="w-100"></div>
  <div class="col-sm-1 d-print-none">
    <%= link_to 'Back', questionnaire_path(@questionnaire), class: 'btn btn-secondary' %>
  </div>
  <div class="col">
    <h2><%= @questionnaire.title %></h2>
    <ul class="list-group">
      <% @responses.each do |response| %>
        <li class="list-group-item list-group-item-action list-group-item-info d-flex zjustify-content-between align-items-center">
          <%= link_to [response.name, response.phone, response.email].filter(&:present?).join(' &bull; ').html_safe, questionnaire_response_path(@questionnaire, response), class: 'text-reset text-decoration-none stretched-link' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
